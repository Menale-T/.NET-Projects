@model IEnumerable<SUP_INV1._0.Models.Others>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expiry_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock_In_Price_Per_Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock_Out_Price_Per_Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier_Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expiry_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock_In_Price_Per_Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock_Out_Price_Per_Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier_Email)
                </td>
                <td>
                    |
                    |
                    <a asp-action="DeleteRequiredQuantity" asp-route-id="@item.OID">DeleteQuantity</a>
                </td>
            </tr>
        }
    </tbody>
</table>
