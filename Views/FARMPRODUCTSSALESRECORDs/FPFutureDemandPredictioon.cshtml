@model SUP_INV1._0.ViewModel.ViewModel1

@using (Html.BeginForm("FPFutureDemandPredictioon", "FARMPRODUCTSSALESRECORDs", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedItem, "Select Item:")
        @Html.DropDownListFor(m => m.SelectedItem, Model.ItemName, new { @class = "form-control" })
    </div>
